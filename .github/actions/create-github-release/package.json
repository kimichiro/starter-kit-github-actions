    "start": "npx local-action . src/index.ts .env",
    "build": "npx ncc build src/index.ts --source-map --license licenses.txt",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write ./src/**/*.ts ./__tests__/**/*.ts",
